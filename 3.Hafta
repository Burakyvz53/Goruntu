#histogramı bulan fonksiyon:
def my_fun_2(im_1=plt.imread('a.jpg')):
    m,n,p=im_1.shape
    my_histogram={}
    for i in range (m):
        for j in range (n):
            if im_1[i,j,0] in my_histogram.keys():
                my_histogram[im_1[i,j,0]]=my_histogram[im_1[i,j,0]]+1
            else:
                my_histogram[im_1[i,j,0]]=1
    return my_histogram

