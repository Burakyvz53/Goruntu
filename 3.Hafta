def my_fun_1(my_list_1=[2,4,3,40,5,6,3,3,2,1]):
    t=0
    s=0
    for i in my_list_1:
        s=s+1
        t=t+i
    ortalama=t/s
    
    t=0
    s=0
    for i in my_list_1:
        s=s+1
        t=t+(i-ortalama)*(i-ortalama)
    varyans=t/(s-1)
    
    return ortalama, varyans
